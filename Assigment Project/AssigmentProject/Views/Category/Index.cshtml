
@{
    ViewBag.Title = "Category";
}

<style>
    .border {
        border-bottom: solid 3px;
    }

    td.garis {
        border-top-style: groove;
    }
</style>

<font face="" color="Blue">
    <p>
        <div class="border">
            <h4>
                <b>Category Book</b>
                <span class="btn btn-create glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            </h4>
        </div>
    </p>

    <div id="data-list">

    </div>

</font>

<div class="modal fade" id="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content modal-md">
            <div class="modal-header bg-primary header-modal-sm">
                <button type="button" class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="title">Modal Tittle</h4>
            </div>
            <div class="modal-body" id="body">
                <p>One fine body&hellip;</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            GetList();
        });

        function GetList() {
            $.ajax({
                url: '@Url.Action("List", "Category")',
                type: 'get',
                success: function (result) {
                    $("#data-list").html(result);
                }
            });
        }

        $(".btn-create").click(function () {
            $.ajax({
                url: '@Url.Action("Create", "Category")',
                type: 'get',
                success: function (result) {
                    $(".modal-title").html("<h4>Tambah Category</h4>");
                    $(".modal-body").html(result);
                    $(".modal").modal("show");
                }
            });
        });

    </script>
}

