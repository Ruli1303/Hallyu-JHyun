@model ViewModel.PesertaViewModel

<div>
    <dl class="dl-horizontal">
        <dt>
            Nama
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nama)
        </dd>

        <dt>
            No Handphone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.noTelpon)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            Tanggal Lahir
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tanggalLahir)
        </dd>

        <dt>
            Alamat
        </dt>

        <dd>
            @Html.DisplayFor(model => model.alamat)
        </dd>

        <dt>
            Jurusan
        </dt>

        <dd>
            @Html.DisplayFor(model => model.jurusan)
        </dd>

        <dt>
           Pertanyaan
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pertanyaan)
        </dd>

    </dl>
</div>

<div class="row" style="padding-left: 10px">
    <button type="button" class="btn btn-close btn-warning">Close</button>
</div>

<script type="text/javascript">
    $(".btn-close").click(function () {
        $.ajax({
            url: this.action,
            type: this.method,
            data: $(this).serialize(),
            success: function (result) {
                $(".modal").modal("hide");
            }
        });
    });

</script>
